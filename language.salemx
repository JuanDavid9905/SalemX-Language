<include>SalemC</include>   <!-- Enable SalemC support in SalemX -->

<!-- Define variables in SalemC style -->
<var>
    <pet>cat</pet>
    <food>fish</food>
</var>

<!-- Output variables -->
<output>pet</output>   <!-- Shows: cat -->
<output>food</output>  <!-- Shows: fish -->

<!-- HTML block using variables -->
<html>
    <h1>Welcome to SalemC inside SalemX!</h1>
    <p>My pet is <var-ref>pet</var-ref> and loves <var-ref>food</var-ref>.</p>
</html>

<!-- Optional JS block -->
<js>
console.log("Pet:", "cat", "Food:", "fish");
</js>

<!-- Optional Bash placeholder (human-readable) -->
<bash>
echo "Pet is cat and loves fish"
</bash>

