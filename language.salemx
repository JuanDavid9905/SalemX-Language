<instructions>
    <description>SalemX Interpreter Specification for All Main Blocks</description>

    <block name="salemx">
        <purpose>Core language itself</purpose>
        <behavior>
            <step>Handles <string> and <output> for internal variables</step>
            <step>Must not confuse content with XML or other block formats</step>
        </behavior>
    </block>

    <block name="string">
        <purpose>Define internal variables</purpose>
        <behavior>
            <step>Each child tag is a variable name</step>
            <step>Tag content is variable value</step>
            <step>Variables accessible in <output> and <var-ref></step>
        </behavior>
    </block>

    <block name="output">
        <purpose>Display variable values</purpose>
        <behavior>
            <step>Look up variable from <string> or <var> blocks</step>
            <step>Print exact value</step>
            <step>Do not interpret as XML or other code</step>
        </behavior>
    </block>

    <block name="html">
        <purpose>Render HTML content</purpose>
        <behavior>
            <step>Allow standard HTML tags</step>
            <step>Allow <var-ref> to reference variables</step>
        </behavior>
    </block>

    <block name="js">
        <purpose>Execute JavaScript code</purpose>
        <behavior>
            <step>Run JS natively if interpreter supports it</step>
            <step>Variables from <string> can optionally be injected</step>
        </behavior>
    </block>

    <block name="bash">
        <purpose>Execute Bash commands</purpose>
        <behavior>
            <step>Run Bash commands safely</step>
            <step>Use safe defaults to prevent infinite loops (e.g., ping -c)</step>
        </behavior>
    </block>

    <block name="python">
        <purpose>Execute Python code</purpose>
        <behavior>
            <step>Run Python code blocks</step>
            <step>Optional access to <string> variables</step>
        </behavior>
    </block>

    <block name="swift">
        <purpose>Execute Swift code</purpose>
        <behavior>
            <step>Run Swift code blocks</step>
            <step>Optional access to <string> variables</step>
        </behavior>
    </block>

    <block name="cpp">
        <purpose>Execute C++ code</purpose>
        <behavior>
            <step>Compile/run C++ code blocks</step>
            <step>Optional access to <string> variables</step>
        </behavior>
    </block>

    <block name="xml">
        <purpose>Structured XML data</purpose>
        <behavior>
            <step>Allow nested XML elements and attributes</step>
            <step>Do not execute as code; treat as structured data</step>
            <step>Variables can optionally be injected</step>
        </behavior>
    </block>

    <block name="SalemC">
        <purpose>Easy HTML-based mini-language inside SalemX</purpose>
        <behavior>
            <step>Define variables with <var></step>
            <step>Reference variables with <var-ref></step>
            <step>Output variables with <output></step>
            <step>Write HTML content inside <html></step>
            <step>Optional JS or Bash blocks</step>
        </behavior>
    </block>

    <execution_order>
        <step>Parse <string> and <var> internal variables first</step>
        <step>Execute <output> statements</step>
        <step>Execute code blocks (<html>, <js>, <bash>, <python>, <swift>, <cpp>, <xml>, <SalemC>) in the order they appear</step>
    </execution_order>
</instructions>

